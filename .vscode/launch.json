{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Viiper Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/viiper",
            "env": {
                "VIIPER_LOG_LEVEL": "debug",
                "VIIPER_LOG_FILE": "logs/viiper.log",
                "VIIPER_LOG_RAW_FILE": "logs/viiper_raw.log",
            },
            "args": [
                "server"
            ],
            "showLog": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Viiper Proxy",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/viiper",
            "env": {
                "VIIPER_LOG_LEVEL": "debug",
                "VIIPER_LOG_FILE": "logs/viiper.log",
                "VIIPER_LOG_RAW_FILE": "logs/viiper_raw.log",
                "VIIPER_PROXY_UPSTREAM": "${input:proxyUpstream}",
            },
            "args": [
                "proxy"
            ],
            "showLog": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
    ],
    "inputs": [
        {
            "id": "proxyUpstream",
            "type": "promptString",
            "description": "Upstream USB/IP server address",
            "default": "localhost:3240"
        }
    ]
}